{
    "name": "amadeco/amadeco-magento2-patchset",
    "type": "patchset",
    "version": "1.0.0",
    "require": {
        "cweagans/composer-patches": "^1.7",
        "creativestyle/composer-plugin-patchset": "^2.0",
        "creativestyle/magento-patches": "^1.3"
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patches-file": "composer-patches/patches.json",
        "patchset": {
            "magento/module-ui": [
                {
                    "description": "Use jquery slideUp instead of jquery-ui blind effect. Patch cannot be essential because theme-cs > 11.2.0 is needed",
                    "filename": "../../creativestyle/magento-patches/optional/magento/module-ui/remove-jquery-ui-blind-effect.patch",
                    "version-constraint": "*"
                }
            ]
        }
    }
}